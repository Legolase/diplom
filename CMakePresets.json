{
  "version": 10,

  "configurePresets": [
    {
      "name": "default",
      "displayName": "Normal build",
      "description": "Сборка без тестов",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "with-tests",
      "displayName": "Build with GTest",
      "description": "Сборка тестов GTest",
      "binaryDir": "${sourceDir}/build/tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "with-tests",
      "configurePreset": "with-tests"
    }
  ],

  "testPresets": [
    {
      "name": "default",
      "configurePreset": "with-tests"
    }
  ]
}